@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://getbootstrap.com/assets/js/vendor/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <!-- example 2 - using auto margins -->
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
   
    <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="navbar-brand" href="#">IRobus</a>
            </li>
            <li class="nav-item">
                @Html.ActionLink("Ошибки", "Errors", "ResultTable", new {area = ""}, new {@class = "nav-link"})
            </li>
            <li class="nav-item">
                @Html.ActionLink("Каталог сайтов", "Index", "Catalog", new {area = "", id = 0}, new {@class = "nav-link"})
            </li>

            <!-- Dropdown -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                    Результаты
                </a>
                <div class="dropdown-menu">
                    @Html.ActionLink("ТР Автомобили(таблица)", "ResultAvto", "ResultTable", new {area = ""}, new {@class = "dropdown-item"})
                    @Html.ActionLink("ТР Работа(таблица)", "ResultRabota", "ResultTable", new {area = ""}, new {@class = "dropdown-item"})
                    @Html.ActionLink("ТР Недвижимость(таблица)", "ResultNevg", "ResultTable", new {area = ""}, new {@class = "dropdown-item"})
                    @Html.ActionLink("ТР Автомобили", "Avtomobile", "ResultTable", new {area = ""}, new {@class = "dropdown-item"})
                    @Html.ActionLink("ТР Работа", "Rabota", "ResultTable", new {area = ""}, new {@class = "dropdown-item"})
                    @Html.ActionLink("ТР Недвижимость", "Nedvigimost", "ResultTable", new {area = ""}, new {@class = "dropdown-item"})
                </div>

            </li>
            <li>
                @if (!string.IsNullOrEmpty(User.Identity.GetUserName()))
                {
                    @Html.ActionLink("Создать спрос", "Create", "Request", new { area = "" }, new {@class = "nav-link"})
                }
            </li>
        </ul>
    </div>
    <div class="mx-auto order-0">

    </div>
    <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
        @Html.Partial("_LoginPartial")
    </div>
</nav>

   

    <div >
        @RenderBody()
    </div>
</body>
</html>